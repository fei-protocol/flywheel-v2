{
  "name": "dapptools-template",
  "license": "AGPL-3.0-only",
  "version": "1.0.0",
  "description": "Streamlined template for getting started with DappTools and Solmate.",
  "files": [
    "src/**/*.sol"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/transmissions11/dapptools-template.git"
  },
  "devDependencies": {
    "prettier": "^2.3.1",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solc-0.8": "npm:solc@^0.8.13",
    "solidity-docgen": "0.5.16"
  },
  "scripts": {
    "lint": "prettier --write src/**/*.sol",
    "test:integration": "forge clean && forge test --fork-url https://eth-mainnet.alchemyapi.io/v2/$MAINNET_ALCHEMY_API_KEY --fork-block-number $FORK_BLOCK",
    "docs": "npx solidity-docgen -i ./src/ -e ./src/test -o ./docs/API --solc-module solc-0.8"
  }
}
